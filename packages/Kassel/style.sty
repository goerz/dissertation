\ProvidesPackage{packages/Kassel/style}

% School name and location
\university{Universität Kassel}
\universitycity{Kassel}
\universitystate{Germany}

\definecolor{SchoolColor}{rgb}{0.6471, 0.1098, 0.1882} % Crimson
\definecolor{chaptergrey}{rgb}{0.6471, 0.1098, 0.1882} % Crimson

\hypersetup{%
    unicode=true,
    colorlinks=false,
    citecolor=black,
    filecolor=black,
    linkcolor=black,
    urlcolor=black,
    bookmarksopen=false,
    breaklinks=true,
    plainpages=false,
    pdfpagelabels
}

\renewcommand{\frontmatter}{
  \input{frontmatter/personalize}
  \hypersetup{%
      pdftitle={\thetitle},
      pdfauthor={\theauthor},
      pdfkeywords={\@keywords},
      pdfsubject={Dissertation, PhD Thesis},
  }
  \makegermantitle
  \copyrightpage
  \cleardoublepage
  \maketitle
  \cleardoublepage
  \germanabstractpage
  \cleardoublepage
  \abstractpage
  \cleardoublepage
  \tableofcontents
  \cleardoublepage
  \listoffigures
  \cleardoublepage
  \dedicationpage
  \acknowledgments
  % Setting for the main matter
  \pagenumbering{arabic}
  \setcounter{page}{0}
  \pagestyle{fancy}
  \pagestyle{fancyplain}
  \fancyhf{}
  \fancyhead[LE,RO]{\thepage}
  \fancyhead[LO]{\it \rightmark}
  \fancyhead[RE]{\it \leftmark}
  \fancypagestyle{plain}{%
    \fancyhead{} % get rid of headers
    \renewcommand{\headrulewidth}{0pt} % and the line
    \fancyfoot[C]{\thepage}
  }
}

\newcommand{\makegermantitle}{
  \thispagestyle{empty}
  \begin{center}
  %~\vspace{10pt}~\\
  \Huge \textcolor{SchoolColor}{\thetitle} \normalsize \\
  \vspace{20pt}
  {\Large
  \textsc{Dissertation}\\
  }
  \large
  \vspace{20pt}
  zur Erlangung des akademischen Grades \\
  \textsc{Doctor rerum naturalium}\\
  (Dr. rer. nat.) \\
  im Fach \@fieldDe \\
  \vspace{15pt}
  eingereicht am \\
  \@department\\
  \@university \\
  \vspace{15pt}
  von \\
  \vspace{10pt}
  \textbf{\@pdOneName{} \theauthor} \\
  \vspace{10pt}
  geboren am \@authorDoBde{} in \@authorPoB\\
  \end{center}
  \vspace{15pt}
  \large
  Gutachter:
  \begin{enumerate}
    \item \@advisor
    \item \@committeeA
    \item \@committeeB
  \end{enumerate}
  \vspace{15pt}
  Eingereicht am: \@submitDateDe\\
  Disputation am: \@defendDateDe\\
}

\renewcommand{\maketitle}{
  \thispagestyle{empty}
  \begin{center}
  %~\vspace{10pt}~\\
  \Huge \textcolor{SchoolColor}{\thetitle} \normalsize \\
  \vspace{20pt}
  {\Large
  \textsc{Dissertation}\\
  }
  \large
  \vspace{20pt}
  in partial fulfillment of the requirements\\
  for the degree of\\
  \textsc{Doctor rerum naturalium}\\
  (Dr. rer. nat.) \\
  in the field of \@field \\
  \vspace{15pt}
  submitted to the\\
  \@department\\
  \@university \\
  \vspace{15pt}
  by \\
  \vspace{10pt}
  \textbf{\@pdOneName{} \theauthor} \\
  \vspace{10pt}
  born \@authorDoBen{}, \@authorPoB\\
  \vspace{20pt}
  Advisor: \@advisor \\
  \vspace{15pt}
  \@degreemonth{} \@degreeyear
  \end{center}
}

\newcommand{\copyrightpage}{
  \newpage
  \thispagestyle{empty}
  \vspace*{\fill}
  \scshape \noindent \small \copyright \small 2014\hspace{3pt}-- \theauthor \\
  \noindent all rights reserved.
  \vspace*{\fill}
  \newpage
  \rm
}

\newcommand{\germanabstractpage}{
  \newpage
  \pagenumbering{roman}
  \setcounter{page}{5}
  \pagestyle{fancy}
  \renewcommand{\headrulewidth}{0.0pt}
  \vspace*{35pt}
  \begin{center}
  \Large \textcolor{SchoolColor}{\@title} \normalsize \\
  \vspace*{20pt}
  \scshape Zusammenfassung \\ \rm
  \end{center}
  \input{frontmatter/abstract_german}
  \vspace*{\fill}
  \newpage \lhead{} \rhead{}
  \cfoot{\thepage}
}


\newcommand{\abstractpage}{
  \newpage
  \pagenumbering{roman}
  \setcounter{page}{7}
  \pagestyle{fancy}
  \renewcommand{\headrulewidth}{0.0pt}
  \vspace*{35pt}
  \begin{center}
  \Large \textcolor{SchoolColor}{\@title} \normalsize \\
  \vspace*{20pt}
  \scshape Abstract \\ \rm
  \end{center}
  \input{frontmatter/abstract}
  \vspace*{\fill}
  \newpage \lhead{} \rhead{}
  \cfoot{\thepage}
}

\newcommand{\dedicationpage}{
  \newpage \thispagestyle{fancy} \vspace*{\fill}
  \scshape \noindent \input{frontmatter/dedication}
  \vspace*{\fill} \newpage \rm
}

\newcommand{\acknowledgments}{
  \chapter*{Acknowledgments}
  \noindent
  \input{frontmatter/thanks}
  \vspace*{\fill} \newpage
}


